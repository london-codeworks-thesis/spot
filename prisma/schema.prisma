generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id String @id @default(uuid())
  google_id String @unique
  name String
  address String 
  phone String
  google_maps_uri String 
  price_level Price
  type String 
  opening_hours String[]
  summary String 
  image_url String?
  latitude Float
  longitude Float
}

enum Price {
  EXPENSIVE
  FREE
  INEXPENSIVE
  MODERATE
  UNKNOWN
}
